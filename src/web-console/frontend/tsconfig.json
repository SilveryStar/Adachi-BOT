{
  "compilerOptions" : {
    "target" : "ES2020",
    "useDefineForClassFields" : true,
    "module" : "ESNext",
    "lib" : [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck" : true,
    /* Bundler mode */
    "moduleResolution" : "bundler",
    "allowImportingTsExtensions" : true,
    "resolveJsonModule" : true,
    "isolatedModules" : true,
    "noEmit" : true,
    "jsx" : "preserve",
    "baseUrl": "./",
    "paths" : {
      "@/*" : [
        "src/*"
      ]
    },
    /* Linting */
    "strict" : true,
    "noImplicitAny": false
  },
  "include" : [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references" : [
    {
      "path" : "./tsconfig.node.json"
    }
  ]
}
